# AWS RDS Database Configuration
RDS_ENDPOINT=voice-biomarker-users-db.cnq0agmieipg.eu-central-1.rds.amazonaws.com
RDS_PORT=5432
RDS_DB_NAME=voice_biomarker_users
RDS_USERNAME=postgres
RDS_PASSWORD=your-secure-database-password
AWS_REGION=eu-central-1

# Database Connection Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_SSL_MODE=require

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32

# JWT Configuration
JWT_PRIVATE_KEY_PATH=./keys/jwt_private_key.pem
JWT_PUBLIC_KEY_PATH=./keys/jwt_public_key.pem
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
JWT_ALGORITHM=RS256

# Password Policy
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true
PASSWORD_HISTORY_COUNT=5
PASSWORD_EXPIRY_DAYS=90

# Security Settings
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30
BCRYPT_ROUNDS=12
MAX_SESSIONS_PER_USER=5
SESSION_TIMEOUT_MINUTES=60

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_REQUESTS=20
REDIS_URL=redis://localhost:6379/0

# Email Configuration (for verification)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@voicebiomarker.com
EMAIL_VERIFICATION_EXPIRE_HOURS=24

# MFA Configuration
MFA_ISSUER_NAME=Voice Biomarker
MFA_QR_CODE_SIZE=200
MFA_BACKUP_CODES_COUNT=10

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","https://app.voicebiomarker.com"]
CORS_ALLOW_CREDENTIALS=true

# Security Features
ENABLE_AUDIT_LOGGING=true
ENABLE_ENCRYPTION_AT_REST=true
ENABLE_IP_WHITELIST=false
IP_WHITELIST=[]
HIPAA_COMPLIANT_MODE=true
REQUIRE_PRIVACY_CONSENT=true

# AWS Configuration (for future use)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET_NAME=voice-biomarker-audio-files
S3_AUDIO_PREFIX=audio-files/
S3_PRESIGNED_URL_EXPIRY=3600

# Monitoring
CLOUDWATCH_LOG_GROUP=/aws/ecs/voice-biomarker/user-management
USE_SECRETS_MANAGER=false
SECRETS_MANAGER_DB_SECRET=voice-biomarker/rds/credentials